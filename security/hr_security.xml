<odoo>
    <!-- Custom Group for Employees -->
    <record id="group_employee" model="res.groups">
        <field name="name">Employee</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <!-- Access Rights for Employees -->
    <record id="access_hr_employee_change_user" model="ir.model.access">
        <field name="name">Employee Change User Access</field>
        <field name="model_id" ref="model_hr_employee_change"/>
        <field name="group_id" ref="group_employee"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Access Rights for HR Managers -->
    <record id="access_hr_employee_change_manager" model="ir.model.access">
        <field name="name">HR Manager Change Access</field>
        <field name="model_id" ref="model_hr_employee_change"/>
        <field name="group_id" ref="hr.group_hr_manager"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <!-- Record Rule for Employees -->
    <record id="rule_hr_employee_change_user" model="ir.rule">
        <field name="name">Employee Change Request Access</field>
        <field name="model_id" ref="model_hr_employee_change"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_employee'))]"/> <!-- Corrected field name -->
    </record>
</odoo>
